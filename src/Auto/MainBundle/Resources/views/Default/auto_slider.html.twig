<div class="slider-wrapper">
    <nav>
        <ul>
            <li class="tab_slider active_slider" data-slider="bu" ><a href="#" >С ПРОБЕГОМ</a></li>
            <li class="tab_slider" data-slider="new"><a href="#" >Новые</a></li>
        </ul>
    </nav>
    <section class="slider-block new_slider_block">
        {% if slidecount_new != 0 %}
            <div class="slider-body new_slider_body">
                <div class="slide active_slide new_slide new_active_slide" data-page="1">
                    <div class="large_car">
                        <a href="/auto/{{ slider_new[0].id }}/{{ slider_new[0].mark }}-{{ slider_new[0].model }}"><img src="{{ asset('bundles/auto/userfiles/') }}{{ slider_new[0].img }}" alt="{{ slider_new[0].model }}" /></a>
                        <p class="carname">{#<a href="/Symfony/web/app_dev.php/auto/{{ slider_new[0].id }}/{{ slider_new[0].mark }}-{{ slider_new[0].model }}">#}<span class="auto_field_name">Марка:</span> <span class="car_mark">{{ slider_new[0].mark }}</span>{#</a>#}</p>
                        <p class="carname"><span class="auto_field_name">Модель:</span> <span class="car_model">{{ slider_new[0].model }}</span></p>
                        <p class="caryear"><span class="auto_field_name">Год выпуска:</span> <span class="car_year">{{ slider_new[0].year }}</span></p>
                        <p class="carrun"><span class="auto_field_name">Пробег:</span> <span class="car_run">{{ slider_new[0].run|number_format(0, '.', ' ') }} км</span></p>
                        <p class="carprice"><span class="auto_field_name">Цена:</span> <span class="car_price">{{ slider_new[0].price|number_format(0, '.', ' ') }} грн</span></p>
                    </div>
                    <div class="mini_slider new_mini_slider">
                        <div class="previous_car"></div>
                        <div class="body_mini_slider">
                            <div class="mini_slider_items">
                                {% for i in 1..slidecount_new-1 %}
                                    <div class="small_car" id="car-{{ slider_new[i].id }}">
                                        <a href="#"><img src="{{ asset('bundles/auto/userfiles/') }}{{ slider_new[i].img }}" alt="{{ slider_new[i].model }}"/></a>
                                        <p class="info_about_car" data-link="/auto/{{ slider_new[i].id }}/{{ slider_new[i].mark }}-{{ slider_new[i].model }}" data-mark="{{ slider_new[i].mark }}" data-model="{{ slider_new[i].model }}" data-year="{{ slider_new[i].year }}" data-run="{{ slider_new[i].run|number_format(0, '.', ' ') }}" data-price="{{ slider_new[i].price|number_format(0, '.', ' ') }}">{{ slider_new[i].year }} г.в., {{ slider_new[i].run|number_format(0, '.', ' ') }} км, цена: {{ slider_new[i].price|number_format(0, '.', ' ') }} грн</p>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                        <div class="next_car"></div>
                    </div>

                </div>
            </div>
            <div class="items_headers">
                <div class="headers_slider">
                    {% for i in 1..slidecount_new-1 %}
                        <h3 class="carname"><a href="/auto/{{ slider_new[i].id }}/{{ slider_new[i].mark }}-{{ slider_new[i].model }}"><span class="car_mark">{{ slider_new[i].mark }}</span> <span class="car_model">{{ slider_new[i].model }}</span></a></h3>
                    {% endfor %}
                </div>
            </div>
        {% endif %}
        <br class="clear"/>
    </section>

