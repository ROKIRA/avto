            </div>
            <div class="items_headers">
                <div class="headers_slider">
                    {% for i in 1..slidecount_bu-1 %}
                        <h3 class="carname"><a href="/auto/{{ slider_bu[i].id }}/{{ slider_bu[i].mark }}-{{ slider_bu[i].model }}"><span class="car_mark">{{ slider_bu[i].mark }}</span> <span class="car_model">{{ slider_bu[i].model }}</span></a></h3>
